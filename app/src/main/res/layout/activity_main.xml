<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|enterAlways">

        <include layout="@layout/layout_custom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="35dp" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/main_agregarProgramaBtn"
            style="?attr/borderlessButtonStyle"
            android:background="@drawable/custom_button"
            android:text="Agregar programa nutricional"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/main_agregarClienteBtn"
            android:layout_below="@id/main_agregarProgramaBtn"
            style="?attr/borderlessButtonStyle"
            android:background="@drawable/custom_button"
            android:text="Registrar cliente"
            android:textColor="@android:color/white"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/main_verClientesBtn"
            android:layout_below="@id/main_agregarClienteBtn"
            style="?attr/borderlessButtonStyle"
            android:background="@drawable/custom_button"
            android:text="Ver clientes registrados"
            android:textColor="@android:color/white"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/main_cerrarSesionBtn"
            style="?attr/borderlessButtonStyle"
            android:background="@drawable/custom_button_red"
            android:text="Cerrar sesiÃ³n"
            android:textColor="@android:color/white"
            android:layout_marginTop="25dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
